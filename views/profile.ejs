<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
          <div>
              <img class="prof-pic" src="/imgs/upgrade photo new.jpg" alt="">
              <p class="texts"><strong>User Name</strong>: <%= user.userName %></p>
              <p class="texts"><strong>Email</strong>: <%= user.email %></p>
              <a href="/logout" class="btn btn-primary h-48 texts logbut">Logout</a>
          </div>
          
          <div class="mt-5">
            <h2 class="texts">Add a post</h2>
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="title" class="form-label texts">Title</label>
                  <input type="text" class="form-control texts" id="title" name="title">
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label texts">Caption</label>
                <textarea class="form-control" id="caption" name="caption"></textarea>
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label texts">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <button type="submit" class="btn btn-primary texts sub" value="Upload">Submit</button>
            </form>
          </div>
      </div>
      <div class="col-6">
        <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <h2><%= posts[i].title%></h2>
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary w-auto" href="/feed">Return to Feed</a>
        </div>  
      </div>  
      
    </div>
  </div>
</div>
<%- include('partials/footer') -%>